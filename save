#include "push_swap.h"

int ft_end(int data,int *tab,int size,int end)
{
    int middle = size/2;
    int i=0;
    if(end > size)
        end=size-1;
    while(i < size)
        {
            if(data >= tab[middle] && data <= tab[end])
                return 1;
            i++;
        }
        return 0;
}

int ft_start(int data,int *tab,int size,int start)
{
    int middle = size / 2;
    int i=0;
   if(start < 0)
    start=0;
    while(i < size)
    {
        if(data <= tab[middle] && data >= tab[start])
            return 1;
        i++;
    }
        return 0;
}

void the_onee(t_pile **l)
{
    t_pile *b;
    b=NULL;
    indicer(*l);
    int i;
    int middle;
	int offset;
	int end;
	int start;
    int size = ft_lstsize(*l);
    if(size <=10)
        offset=5;
    if(size <=150)
        offset=8;
    if(size > 150)
        offset=18;
    int *tab=struct_to_tab(*l);
    trier_tab(tab,size);
    middle= size / 2;
    start=middle - offset;
    end=middle + offset;
    i=start;
    t_pile *tmp=*l;
   while(tmp)
   {
        while(tmp && i<end)
        {
            if(ft_start(tmp->data,tab,size,start))
            {
            
                push(&tmp,&b);
                putstr("pb\n");
                rot(&b);
                putstr("rb\n");
                i++;
            }
            else
                tmp=tmp->next;
            if(!*l)
                break;
            if(ft_end(tmp->data,tab,size,end))
            {
                push(&tmp,&b);
                putstr("pb\n");
                i++;
            }
            else
                tmp=tmp->next;
        }
        start-=offset;
        end+=offset;
        i=start;
   }
    while (b)
		which_way(&b, l, max_list(b), 'b');
}